{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MaiLauncher",
  "version": "0.1.0",
  "identifier": "com.mailauncher.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MaiLauncher v0.1.0-Preview.1",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/maimai.ico"],
    "externalBin": ["binaries/MaiLauncher-Backend"]
  }
}
